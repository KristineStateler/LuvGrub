<!DOCTYPE html>
<html>

<head>

  <title>OnlineOven</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= javascript_include_tag "vendor/modernizr" %>
    <%= javascript_pack_tag 'application' %>

  <%= csrf_meta_tags %>
    <style>
      @import url('https://fonts.googleapis.com/css?family=Amatic+SC');
    </style>
</head>
<body>

  <% unless current_user %>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% else %>
  <%= current_user[:name] %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>


  <header class="head-bckg">
      <h1 class="title-index">LuvGrub</h1>
    </header>

<nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <p><a href="/">Home</a></p>
      </li>
    </ul>

    <section class="top-bar-section">
      <div class="right">
        <%- flash.each do |key, value| -%>
          <li id="flash" class="flash flash-<%= key %>">
            <%= value %>
          </li>
        <%- end -%>
        <%- if current_user -%>
             <h1><%= link_to 'Add A New Recipe To The Mix!', new_recipe_path %></h1>
              <h1><%= link_to 'View Liked Recipes!', preferences_path %></h1>

              <p><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
            <%- else -%>
              <p><%= link_to 'Sign Up', new_user_registration_path %></p>
              <p><%= link_to 'Sign In', new_user_session_path %></p>
            <%- end -%>
      </div>
    </section>
  </nav>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
